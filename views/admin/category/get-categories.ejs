<%  layout("layout") -%>
<div class="row">

	
	<div class="col-md-6 col-md-offset-3">
	<h2>Categories</h2>
	<% if(err.length >0) { %>
	<div class="alert alert-danger alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<%= err %>
	</div>
	<% } %>

	<% if(success.length >0) { %>
	<div class="alert alert-success alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<%= success %>
	</div>
	<% } %>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
				<% categories.forEach(function(cat){ %>
				<tr>
					<td><%= cat.name%></td>
					<td><a href="/admin/category/edit-category/<%= cat._id %>" class="btn btn-warning">Edit</a></td>
					<td>

						<form style="padding:0;" method="post" action="/admin/category/delete/<%= cat._id %>" class="form-inline">
							<button type="submit" class="btn btn-danger">Delete</button>
						</form>
					</td>
				</tr>
				<% }); %>
			</tbody>
		</table>

	</div>
	<div class="col-md-6 col-md-offset-3">
		<a href="/admin/category/add-category" class="btn btn-success">Add category</a>

	</div>
</div>
