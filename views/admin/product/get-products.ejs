<%  layout("layout") -%>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
	<h2>Product<a href="/admin/product/add-product" class="btn btn-success pull-right">Add product</a>s</h2>
		

	</div>
	
	<div class="col-md-8 col-md-offset-2">
	
	<% if(err.length >0) { %>
	<div class="alert alert-danger alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<%= err %>
	</div>
	<% } %>

	<% if(success.length >0) { %>
	<div class="alert alert-success alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<%= success %>
	</div>
	<% } %>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
				<% products.forEach(function(prod){ %>
				<tr>
					<td><a href="/product/show/<%= prod._id%>"><%= prod.name%></a></td>
					<td><a href="/admin/product/edit-product/<%= prod._id %>" class="btn btn-warning">Edit</a></td>
					<td>

						<form style="padding:0;" method="post" action="/admin/product/delete/<%= prod._id %>" class="form-inline">
							<button type="submit" class="btn btn-danger">Delete</button>
						</form>
					</td>
				</tr>
				<% }); %>
			</tbody>
		</table>

	</div>
	
</div>
