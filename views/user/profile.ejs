<%  layout("layout") -%>
	

<div class="container">
<% if(success.length >0) { %>
			<div class="alert alert-success alert-dismissible" role="alert">
			  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			   <%= success %>
			</div>
		<% } %>
<div class="row">

	<div class="col-md-4 ">
		<img src="<%=user.profile.picture%>" class="img-circle img-responsive img-center" alt=""><br>
	<p>Name : <%=user.profile.name%></p>
	<p>Email : <%=user.email%></p>
	<% if(user.profile.address) {%>
	<p>Address : <%=user.profile.address%></p>
	<% } else {  %>
	<p>Address :<span style="color:#c0392B;font-weight:bold;">no address</span> </p>
	<% } %>

	<a href="/user/edit-profile" class="btn btn-primary btn-lg"> Edit profile</a>
	</div>
	<div class="col-md-6">
		<h2 class="text-center">History</h2>
		<table class="table table-striped sticky-header">
			<thead>
				<tr>
					<th>Item's name</th>
					<th>Paid</th>
				</tr>
			</thead>
			<tbody>
			<% uuser.history.forEach(function(i){ %>
				<tr>
					<td><%=i.item.name%></td>
					<td>$<%=i.paid%></td>
				</tr>

		   <%	}) %>
							</tbody>
		</table>
	</div>
</div>


</div>
